{
    "packages": {
        ".": {
            "release-type": "simple",
            "include-v-in-tag": true,
            "include-component-in-tag": false,
            "changelog-path": "CHANGELOG.md",
            "extra-files": [
                {
                    "type": "json",
                    "path": "ui/package.json",
                    "jsonpath": "$.version"
                },
                {
                    "type": "yaml",
                    "path": "charts/cloud-sentinel-k8s/values.yaml",
                    "jsonpath": "$.image.tag"
                },
                {
                    "type": "yaml",
                    "path": "charts/cloud-sentinel-k8s/Chart.yaml",
                    "jsonpath": "$.version"
                },
                "README.md"
            ]
        }
    }
}