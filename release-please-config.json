{
    "packages": {
        ".": {
            "release-type": "simple",
            "include-v-in-tag": true,
            "extra-files": [
                "version.txt",
                {
                    "type": "json",
                    "path": "ui/package.json",
                    "jsonpath": "$.version"
                },
                "README.md"
            ]
        },
        "charts/cloud-sentinel-k8s": {
            "release-type": "helm",
            "changelog-path": "CHANGELOG.md",
            "extra-files": [
                "charts/cloud-sentinel-k8s/values.yaml",
                "charts/cloud-sentinel-k8s/README.md"
            ]
        }
    }
}