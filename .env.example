# Application
PORT=8080
GIN_MODE=release

# Database Configuration
# Supported DB_TYPE values: postgres, mysql, sqlite
DB_TYPE=postgres
DB_DSN="host=localhost user=postgres password=yourpassword dbname=cloud_sentinel_dev port=5432 sslmode=disable TimeZone=UTC"

# OIDC Authentication
OIDC_ISSUER=https://your-oidc-provider.com
OIDC_CLIENT_ID=your-client-id
OIDC_CLIENT_SECRET=your-client-secret

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
FRONTEND_PORT=3000

# Subpath Support (optional)
# Set this if hosting the app on a subpath (e.g., /cloud-sentinel)
# CLOUD_SENTINEL_K8S_BASE=/cloud-sentinel
